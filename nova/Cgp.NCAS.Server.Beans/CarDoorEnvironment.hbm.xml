<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Contal.Cgp.NCAS.Server.Beans.CarDoorEnvironment, Cgp.NCAS.Server.Beans"
         table="CarDoorEnvironment"
         select-before-update="true">
    <cache usage="read-write"/>

    <id name="IdCarDoorEnvironment" column="IdCarDoorEnvironment" type="Guid">
      <generator class="guid.comb"/>
    </id>

    <many-to-one name="DoorEnvironment"
                 class="Contal.Cgp.NCAS.Server.Beans.DoorEnvironment, Cgp.NCAS.Server.Beans"
                 column="IdDoorEnvironment"
                 not-null="true"
                 lazy="proxy"/>

    <many-to-one name="Car"
                 class="Contal.Cgp.Server.Beans.Car, Cgp.Server.Beans"
                 column="IdCar"
                 not-null="true"
                 lazy="proxy"/>

    <!-- ak je enum tinyint, uveď typ Byte (alebo vlastný EnumByteType) -->
    <property name="AccessType" column="AccessType" not-null="true" type="Byte"/>
  </class>
</hibernate-mapping>
